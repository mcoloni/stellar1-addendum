<%= bootstrap_form_for(@eyepiece) do |f| %>
  <%= f.text_field :name, label: 'Nome:'%>
  <%= f.text_field :brand, label: 'Brand:' %>
  <%= f.text_area :description, label: 'Descrizione:' %>
  <%= f.text_field :focal_length, label: 'Lunghezza focale:' %>
  <%= f.text_field :ocular, label: 'Oculare:' %>
  <%= f.text_field :apparent_fov, label: 'Campo di visione apparente:' %>
  <%= f.text_field :size, label: 'Dimensione:' %>
  <%= f.text_area :notes, label: 'Note:' %>
  <%= f.submit 'Aggiorna' %>
<% end %>
